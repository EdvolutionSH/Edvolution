<odoo>
    <!-- Vista Tree para suscripciones -->
    <record id="view_reseller_subscription_tree" model="ir.ui.view">
        <field name="name">reseller.subscription.tree</field>
        <field name="model">reseller.subscription</field>
        <field name="arch" type="xml">
            <tree string="Suscripciones">
                <field name="skuName" string="Nombre"/>
                <field name="subscriptionId" string="ID de Suscripción"/>
                <field name="status" string="Estado"/>
                <field name="planName" string="Plan"/>
                <field name="formattedStartTime" string="Fecha Inicial"/>
                <field name="formattedEndTime" string="Fecha Final"/>
            </tree>
        </field>
    </record>

    <!-- Menús para Suscripciones -->
    <menuitem id="menu_subscriptions" name="Suscripciones" parent="reseller_module_menu_root" sequence="20"/>
    
    <!-- Acción para Actualizar contactos-->
    <record id="view_generate_report" model="ir.ui.view">
        <field name="name">reseller.subscription.form</field>
        <field name="model">reseller.subscription</field>
        <field name="arch" type="xml">
            <form string="Reseller module">
                <sheet>
                    <div class="oe_button_panel mb16">
                        <button string="Generar reporte"
                                type="object"
                                name="generate_report"
                                class="btn-primary d-flex align-items-center"
                                style="margin-bottom: 16px;">
                            <i class="fa fa-file-excel-o" style="font-size: 1.2rem; margin-right: 8px;"></i> <!-- Ajusta el espacio con margin-right -->
                            <span style="font-size: 1.1rem;">Generar reporte</span>
                        </button>
                    </div>                    
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_reports_domain" model="ir.actions.act_window">
        <field name="name">Generar reporte</field>
        <field name="res_model">reseller.subscription</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_generate_report"/>
        <field name="target">current</field>
    </record>

    <!--  -->
    <menuitem id="menu_reports" name="Reportes" parent="reseller_module_menu_root" sequence="30"/>
    <menuitem id="menu_reports_domains" name="Reporte de margen" parent="menu_reports" action="action_reports_domain" sequence="10"/>
</odoo>
