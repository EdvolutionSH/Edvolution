<odoo>
    <record id="view_reseller_module_form_update" model="ir.ui.view">
        <field name="name">reseller.module.form</field>
        <field name="model">reseller.module</field>
        <field name="arch" type="xml">
            <form string="Reseller Module">
                <sheet>
                    <!-- Sección del botón -->
                    <div class="oe_button_panel mb16">
                         <button
                                type="object"
                                name="sync_contacts"
                                class="btn-primary d-flex align-items-center"
                                style="margin-bottom: 16px;">
                            <i class="fa fa-refresh" style="font-size: 1.2rem; margin-right: 8px;"></i>
                            <span style="font-size: 1.1rem;">Sincronizar Contactos</span>
                        </button>
                    </div>

                    <!-- Sección de datos -->
                    <div class="oe_panel">
                        <div class="row">
                            <!-- Columna de "Contactos en Odoo" -->
                            <div class="col-4 oe_card">
                                <div class="oe_card_header">
                                    <h3>Contactos en Odoo</h3>
                                </div>
                                <div class="oe_card_body">
                                    <p class="oe_stat"><field name="contact_total" readonly="1"/></p>
                                </div>
                            </div>

                            <!-- Columna de "Contactos sincronizados" -->
                            <div class="col-4 oe_card">
                                <div class="oe_card_header">
                                    <h3>Contactos Sincronizados</h3>
                                </div>
                                <div class="oe_card_body">
                                    <p class="oe_stat"><field name="contact_synced" readonly="1"/></p>
                                </div>
                            </div>

                            <!-- Columna de "Contactos en consola Reseller" -->
                            <!-- <div class="col-4 oe_card">
                                <div class="oe_card_header">
                                    <h3>Contactos en consola Reseller</h3>
                                </div>
                                <div class="oe_card_body">
                                    <p class="oe_stat">38</p>
                                </div>
                            </div> -->
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para Actualizar contactos-->
    <record id="action_contacts_update" model="ir.actions.act_window">
        <field name="name">Actualizar contactos</field>
        <field name="res_model">reseller.module</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_reseller_module_form_update"/>
        <field name="target">current</field>
    </record>

    <record id="view_contacts_tree" model="ir.ui.view">
        <field name="name">contactos.tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree string="Contactos">
                <field name="name" string="Nombre"/>
                <field name="email" string="Correo Electrónico"/>
                <field name="phone" string="Teléfono"/>
            </tree>
        </field>
    </record>

    <!-- Acción para ver lista de contactos-->
    <record id="action_contacts_view" model="ir.actions.act_window">
        <field name="name">Vista Contactos</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_contacts_tree"/>
        <field name="context">{'group_by': 'parent_id'}</field>
    </record>

    <!-- Menú principal -->
    <menuitem id="reseller_module_menu_root" name="Reseller Module" sequence="10"/>

    <!-- Opción Contactos -->
    <menuitem id="menu_contacts" name="Contactos" parent="reseller_module_menu_root" sequence="10"/>
    <menuitem id="menu_contacts_update" name="Actualizar contactos" parent="menu_contacts" action="action_contacts_update" sequence="10"/>
    <menuitem id="menu_contacts_view" name="Vista contactos" parent="menu_contacts" action="action_contacts_view" sequence="20"/>

    <!-- Submenú Suscripciones -->
    <menuitem id="menu_subscriptions" name="Suscripciones" parent="reseller_module_menu_root" sequence="20"/>
    
</odoo>
